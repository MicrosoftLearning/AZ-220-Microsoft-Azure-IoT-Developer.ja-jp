                    "metadata": {
                        "_generator": {
                            "name": "bicep",
                            "version": "0.4.451.19169",
                            "templateHash": "7255214456599870961"
                        }
                    },
                    "parameters": {
                        "iotHubName": {
                            "type": "string",
                            "metadata": {
                                "description": "IoT Hub 名"
                            }
                        },
                        "location": {
                            "type": "string",
                            "defaultValue": "[resourceGroup().location]",
                            "metadata": {
                                "description": "リソースの場所を指定します。"
                            }
